@model IEnumerable<Project_MVC5.Models.ITEMS>
@{
    ViewBag.Title = "Add New Item";
    Layout = "~/Views/Shared/_PurchaseLayout.cshtml";


}




@* add new & edit*@

<div class="box box-danger">

    <div class="box-body">

        <form class="form-horizontal" action="/Stock_AddItem/AddorEdit" method="post">

            <div class="form-group">
                <label class="control-label col-sm-4">Item name</label>
                <input type="text" class="form-control col-xs-1" name="Name_Item" id="Name_Item" />
                <input type="hidden" name="StockId" id="StockId" />
            </div>
            <div class="form-group">
                <label class="control-label col-sm-4">Item Code</label>
                <input type="text" class="form-control col-sm-6" name="StockCode" id="StockCode" />
            </div>
            <div class="form-group">
                <label class="control-label col-sm-4">Category</label>
                <input type="text" class="form-control col-sm-6" name="Type" id="Type" />
            </div>
            <div class="form-group">
                <label class="control-label col-sm-4">Product Price</label>
                <input type="text" class="form-control col-sm-6" name="COST_PRICE" id="COST_PRICE" />
            </div>
            <div class="form-group">
                <label class="control-label col-sm-4">Retail_Margin</label>
                <input type="text" class="form-control col-sm-6" name="Retail_Margin" id="Retail_Margin" />
            </div>
            <div class="form-group">
                <label class="control-label col-sm-4">Trade_Margin</label>
                <input type="text" class="form-control col-sm-6" name="Trade_Margin" id="Trade_Margin" />
            </div>
            <div class="form-group">
                <label class="control-label col-sm-4">Product Quantity</label>
                <input type="text" class="form-control col-sm-6" name="Add_Quantity" id="Add_Quantity" />
            </div>
            <div class="form-group">
                <label class="control-label col-sm-4">Supplier</label>
                <input type="text" class="form-control col-sm-6" name="Vendor_Name" id="Vendor_Name" />
            </div>
            <input type="submit" value="SAVE" class="btn btn-danger text-center" />
        </form>
    </div>
</div>



@* using jquery to show data edit and detail product*@

<script src="~/Scripts/jquery-1.10.2.min.js"></script>

<script>
            function showedit(objects) {
                var _this = $(objects).closest(".main-data");
                $("#Name_Product").val(_this.find("td").eq(0).html());
                $("#Price").val(_this.find("td").eq(1).html());
                $("#Quantity").val(_this.find("td").eq(2).html());
                $("#Description").val(_this.find("td").eq(3).html());

                $("#ID_Product").val(_this.attr("data-id"));

            }
</script>
