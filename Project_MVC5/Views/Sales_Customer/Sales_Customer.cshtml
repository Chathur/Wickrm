@model IEnumerable<Project_MVC5.Models.tb_Customer>

@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_SalesLayout.cshtml";
}

@* add new & edit*@
<form class="form-horizontal" action="/Sales_Customer/AddorEdit" method="post">

    <div class="form-group">
        <label class="control-label col-sm-4">Customer name</label>
        <input type="text" class="form-control col-sm-6" name="Name_Customer" id="Name_Customer" />
        <input type="hidden" name="ID_Customer" id="ID_Customer" />
    </div>
    <div class="form-group">
        <label class="control-label col-sm-4">Credit Limit</label>
        <input type="text" class="form-control col-sm-6" name="CreditLimit" id="CreditLimit" />
    </div>
    <div class="form-group">
        <label class="control-label col-sm-4">Address</label>
        <input type="text" class="form-control col-sm-6" name="Address_Customer" id="Address_Customer" />
    </div>
    <div class="form-group">
        <label class="control-label col-sm-4">Telephone</label>
        <input type="text" class="form-control col-sm-6" name="Tel_Customer" id="Tel_Customer" />
    </div>
    <div class="form-group">
        <label class="control-label col-sm-4">Route</label>
        <input type="text" class="form-control col-sm-6" name="Route_desc" id="Route_desc" />
    </div>
    <input type="submit" value="SAVE" class="btn btn-danger text-center" />
</form>



